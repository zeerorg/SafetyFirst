<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fadeScrollbars="false"
    android:scrollbarThumbVertical="@drawable/custom_scrollbar"
    android:scrollbarSize="3dp"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin1"
            android:paddingLeft="@dimen/activity_horizontal_margin1"
            android:paddingRight="@dimen/activity_horizontal_margin1"
            android:paddingTop="@dimen/activity_vertical_margin1"
    tools:context="com.vikas.dtu.safetyfirst2.mKnowIt.KnowItFourth">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="10dp">


            <ImageView
                tools:src="@drawable/stairsladder"
                android:id="@+id/fourth_image"
                android:layout_width="220dp"
                android:layout_height="180dp"
                android:layout_gravity="center_vertical|center_horizontal" />

        </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:padding="@dimen/md_keylines1"
                    android:id="@+id/info_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/knowit_fourth_info"
                    android:background="@drawable/round_red_dark"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="7dp"
                    android:layout_height="90dp" />
                <ImageButton
                    android:id="@+id/howto_btn"
                    android:padding="@dimen/md_keylines1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/knowit_fourth_help"
                    android:background="@drawable/round_red_dark"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_height="90dp" />
                <ImageButton
                    android:src="@drawable/knowit_fourth_check"
                    android:id="@+id/check_btn"
                    android:padding="@dimen/md_keylines1"
                    android:background="@drawable/round_red_dark"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_height="90dp" />
                <ImageButton
                    android:src="@drawable/knowit_fourth_video"
                    android:background="@drawable/round_red_dark"
                    android:id="@+id/video_btn"
                    android:padding="@dimen/md_keylines1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_height="90dp" />

            </LinearLayout>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:text="Heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fourth_heading"
                android:textSize="17sp"
                android:textColor="@color/dark_red"
                android:layout_marginTop="3dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="6dp" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/fourth_how_to"
                android:layout_width="match_parent"
                android:text="Information"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:gravity="center_horizontal" />
            <TextView
                android:id="@+id/fourth_info"
                android:text="def"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:gravity="center_horizontal" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <TextView
            android:id="@+id/fourth_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available"
            android:layout_below="@+id/LinearLayout1"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="false"
            android:layout_marginTop="55dp"
            android:textColor="@android:color/holo_red_dark" />

        <TextView
            android:text="Watch Again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fourth_video"
            android:layout_below="@+id/fourth_status"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:onClick="clickWatchAgain"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="16sp"
            android:layout_marginTop="3dp" />
    </RelativeLayout>
</ScrollView>